<h2 style="text-align: center">All Authors</h2>
<div class="col-md-10 col-md-offset-1" style="border: 2px solid;">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-md-1">STT</th>
        <th class="col-md-2">Author name</th>
        <th class="col-md-3 text-center">Description</th>
        <th class="col-md-2 text-center">Number of book</th>
        <% if logged_in? && admin_user? %>
        <th class="col-md-1"> Edit</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render @authors %>
    </tbody>
  </table>
</div>
