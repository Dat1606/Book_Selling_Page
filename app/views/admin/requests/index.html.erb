<div class="col-md-10 col-md-offset-1" style="border: solid 1px grey; margin-top:3px;">
<div class="col-md-6 col-md-offet-3" style="margin-top: 30px;"><select id="select-requests" class="form-control">
  <option value="0">All Requests</option>
  <option value="1">Pending Requests</option>
  <option value="2">Accepted Requests</option>
  <option value="3">Received Requests</option>
  <option value="5">Returned Books Requests</option>
  <option value="4">Rejected Requests</option>
</select> </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-md-2 text-center">Request name</th>
        <th class="col-md-1 text-center">Status</th>
        <th class="col-md-2 text-center">User name</th>
        <th class="col-md-2 text-center">Book name</th>
        <th class="col-md-2 text-center">Borrow date</th>
        <th class="col-md-2 text-center">Return date</th>
        <% if logged_in? && admin_user? %>
          <th class="col-md-2 text-center">Action </th>
        <% end %>
      </tr>
    </thead>

    <tbody id="requests-table">
      <%= render @requests %>
    </tbody>
  </table>
</div>
