<% if logged_in? %>
  <% if admin_user? %>
    <%= render "shared/control_bar" %>
  <% else %>
    <div class="category_left col-md-3">
        <p></p>
        <%= form_tag(root_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search books", class: 'form-control', id: "filter-autocomplete-search" %>
          <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
        <% end %>
        <h3>Categories</h3>
      <% if @categories.any? %>
      <ol class="micropos">
        <%= render @categories %>
      </ol>
  </div>
  <% end %>
<% end %>
<% if admin_user? %>
  <div class="show_book col-md-9">
    <%= form_tag(category_books_url(1),  :method => "get", id: "search-form", html: { multipart: true }) do |f| %>
     <%= submit_tag "Search", :name => nil, class: "search2 btn btn-primary" %>
   <%= text_field_tag :search, params[:search], placeholder: "Search books...", class: "search1" %>
      <% end %>
      <% end %>
<% if @books.any? %>
<ol class="book">
  <%= render @books %>
</ol>
  <%= paginate @books %>
<% end %>
</div>
</div>
<% else %>
<div class="content">
  <div class="content-left col-md-4">
    <div class="fadeInDown">
      <h1><b><%= t "greeting" %></b></h1>
      <h2><%= t "greeting2" %></h2>
    </div>
  </div>
  <div class="content_right col-md-6" >
    <div class="log_in" data-spy="affix" data-offset-top="197" >
      <h1 align="center" id="log_in"><strong><i>Log in<i></strong></h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember password</span>
            <% end %>

            <%= f.submit "Log in", class: "btn btn-primary" %>
          <% end %>

          <p><b>New user? <%= link_to "Sign up now!", signup_path %></b></p>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
