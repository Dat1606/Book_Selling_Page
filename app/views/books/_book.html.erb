<div class="book_image thumnail col-md-2">
  <%=link_to image_tag(book.picture.url), category_book_path(book.category, book), class: "image_book" %>
  <p align="center"><%= link_to book.name, category_book_path(book.category, book) %></p>
  <span id="like_count"> <%= book.book_likes.count   %> </span></span><i class="fa fa-heart" style="color: red"></i></span>
  <% if admin_user? %>
    <%= link_to t("delete"), category_book_path(book.category, book), method: :delete, data: {confirm: t("are_you_sure")} %>
  <% end %>
    <% if book.number && book.number > 0  %>
    <p><%= book.number %> left<p>
      <% else %>
      <p style="color:red">Out of service</p>
      <% end %>
    <div class="like_form">
  <% if current_user.like?(book) %>
  <%= form_for(current_user.active_likes.find_by(book_id: book.id),
        html: { method: :delete }, remote: true) do |f| %>
        <%= f.submit "Unlike", class: "btn" %>
      <% end %>
    <% else %>
  <%= form_for(current_user.active_likes.build, method: :post, remote: true) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :book_id, value: book.id %>
  <%= f.submit "Like", class: "btn btn-primary" %>
  <% end %>
  <% end %>
</div>
</div>
