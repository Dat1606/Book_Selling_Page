<div class="container">
<% if logged_in? && admin_user? %>
<%= link_to "Delete this category", @category, method: :delete, data: {confirm: t("are_you_sure")} %>
<% end %>
<h1><%= @category.name %></h1>
<% if @books.any? %>
  <%= render @books %>
  <%= paginate @books %>
<% else %>
  <h4>There are no books in this category</h4>
<% end %>
</div>
</div>
