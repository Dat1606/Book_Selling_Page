<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
       <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </section>
  </aside>
</div>
 <%= render 'follow_form' if logged_in? %>
<% if @requests.any? %>
<h2>All Requests</h2>
  <table class="table">
    <thead>
      <tr>
        <th class="col-md-2">Request name </th>
        <th class="col-md-2">User name</th>
        <th class="col-md-2">Book name</th>
        <th class="col-md-2">Borrow date</th>
        <th class="col-md-2">Return date</th>
      </tr>
    </thead>

    <tbody>
      <%= render @requests %>
    </tbody>
  </table>

<% end %>
