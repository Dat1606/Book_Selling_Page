<% provide(:title, 'Sign up') %>
<% if logged_in? %>
<% if admin_user? %>
<div class="sign_up">
  <h1 align="center" style="color: #3498DB"><b><i>Create user</i></b></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, " Retype password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create this user", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>
<% else %>
<div class="sign_up">
  <h1 align="center" style="color: #3498DB"><b><i>Sign up</i></b></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>
